{
  "extends": ["expo/tsconfig.base"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@app/*": ["app/*"],
      "@components/*": ["./src/components/*"],
      "@database/*": ["./src/database/*"],
      "@store/*": ["./src/store/*"],
      "@theme/*": ["./src/theme/*"]
    },
    "target": "ES2017",
    "lib": ["es6"],
    "module": "commonjs",
    "strict": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [".", "src", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": ["node_modules"]
}
